<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Jogador - Sistema de Voleibol</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1>Cadastro de Jogador</h1>
            <div class="user-info">
                <a href="/menu" class="btn-secondary">Voltar ao Menu</a>
                <a href="/logout" class="btn-logout">Sair</a>
            </div>
        </header>
        
        <main class="form-container">
            <h2>Cadastrar Novo Jogador</h2>
            
            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>
            
            <% if (equipes.length === 0) { %>
                <div class="error-message">
                    Nenhuma equipe cadastrada. É necessário cadastrar pelo menos uma equipe antes de cadastrar jogadores.
                </div>
                <div class="btn-group">
                    <a href="/equipes/cadastro" class="btn-primary">Cadastrar Equipe</a>
                    <a href="/menu" class="btn-secondary">Voltar ao Menu</a>
                </div>
            <% } else { %>
                <form method="POST" action="/jogadores/cadastro">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nomeJogador">Nome do Jogador *</label>
                            <input type="text" id="nomeJogador" name="nomeJogador" required 
                                   placeholder="Digite o nome completo">
                        </div>
                        
                        <div class="form-group">
                            <label for="numeroJogador">Número da Camisa *</label>
                            <input type="number" id="numeroJogador" name="numeroJogador" 
                                   min="1" max="99" required placeholder="1-99">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="dataNascimento">Data de Nascimento *</label>
                            <input type="date" id="dataNascimento" name="dataNascimento" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="altura">Altura (cm) *</label>
                            <input type="number" id="altura" name="altura" 
                                   min="100" max="250" required placeholder="Ex: 180">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="genero">Gênero *</label>
                            <select id="genero" name="genero" required>
                                <option value="">Selecione o gênero</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="posicao">Posição *</label>
                            <select id="posicao" name="posicao" required>
                                <option value="">Selecione a posição</option>
                                <option value="Levantador">Levantador</option>
                                <option value="Oposto">Oposto</option>
                                <option value="Central">Central</option>
                                <option value="Ponteiro">Ponteiro</option>
                                <option value="Líbero">Líbero</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="equipeId">Equipe *</label>
                        <select id="equipeId" name="equipeId" required>
                            <option value="">Selecione a equipe</option>
                            <% equipes.forEach(function(equipe) { %>
                                <option value="<%= equipe.id %>"><%= equipe.nomeEquipe %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="btn-group">
                        <button type="submit" class="btn-primary">Cadastrar Jogador</button>
                        <a href="/menu" class="btn-secondary">Cancelar</a>
                    </div>
                </form>
            <% } %>
        </main>
    </div>
</body>
</html>

